<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h1>Eat da Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{!-- Uneatten burgers --}}
            <h2>Burgers you haven't eatten yet!</h2>
            <ol>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/unless}}
                {{/each}}
            </ol>

        </div>
        <div class="col-md-4">
            {{!-- Burger input --}}
            <h2>Add a Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">What kind of burger would you like?</label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button type="submit">Cook up the Burger!</button>
            </form>
        </div>
        <div class="col-md-4">
            {{!-- Eatten burgers --}}
            <h2>Burgers you have eatten!</h2>
            <ol>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>



</div>