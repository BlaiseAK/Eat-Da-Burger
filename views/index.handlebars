<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h1>Feed the plant!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{!-- Plants needing fed --}}
            <h2>Plants needing to be fed!</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-4">
            {{!-- Plant input --}}
            <h2>Add a plant!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">What will you name your plant?</label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button type="submit">Pick your plant</button>
            </form>
        </div>
        <div class="col-md-4">
            {{!-- Fed plants --}}
            <h2>Plants already fed!</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

